{
    "include": [ "src/**/*" ],
    "exclude": [ "src/**/*.spec.*" ],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
    },
}
